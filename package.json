  "devDependencies": {
    "@linthtml/linthtml": "^0.8.4",
    "@mate-academy/linthtml-config": "^0.0.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "parcel": "^1.12.3",
    "stylelint": "^14.2.0",
    "stylelint-config-standard-scss": "^3.0.0"
  }
